# DueDesk Environment Configuration
# Copy this to .env and set your own values

# JWT Configuration (REQUIRED - Generate a secure 256-bit key)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-256-bits-long
JWT_EXPIRY=8h

# Database Configuration
DB_PATH=./customers.db

# Server Configuration
PORT=4000
NODE_ENV=production

# Security Configuration
BCRYPT_ROUNDS=12

# Default Admin Credentials (CHANGE IMMEDIATELY AFTER DEPLOYMENT!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@duedesk.com
DEFAULT_ADMIN_PASSWORD=change-me-immediately-after-deployment

# CORS Configuration (Add your frontend domain)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
